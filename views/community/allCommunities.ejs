
<% include ../partials/createCommunity %>

<div class='allCommunityBanner'>
	<h1>All Communities</h1>
	<button class='btn btn-primary gradient createCommunityBtn'>Create a New Community</button>
</div>

<div class='divider-10'></div>

<% communities.forEach(function(community) { %>
	<div class='singleCommunityBox'>
		<div class='communityName'>
			<a href='/community/<%= community.id %>'>
				<h2><%= community.name.toUpperCase() %></h2>
			</a>	
		</div>
		<div class='communityDescription'>
			<p><%= community.description %></p>
		</div>
	</div>
	<div class='divider-15'></div>
<% }); %>
